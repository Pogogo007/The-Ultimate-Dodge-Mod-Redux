<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
 <moduleName>The Ultimate Dodge Mod</moduleName>
	<installSteps order="Explicit">
		<installStep name="Options" >
			<optionalFileGroups>
				<group name="The Ultimate Dodge Mod" type="SelectExactlyOne">
					<plugins>
						<plugin name="T.U.D Mod Core Files">
							<description>
This contains the core files of T.U.D Mod as well as TUDM Attack Cancel Patch that can be ticked when Nemesis is run
							</description>
							<image path="images\blacklogo.png"/>
							<files>
								<folder source="00 Data\" destination=""/>
							</files>
							<typeDescriptor>
								<type name="Required"/>
							</typeDescriptor>
						</plugin>									
					</plugins>
				</group>
				<group name="TUDM Attack Cancel" type="SelectAtMostOne">
					<plugins order="Explicit">
						<plugin name="TUDM Attack Cancel">
							<description>
This Contains TUDM Attack Cancel
This Allows you to cancel your attacks by dodging with TUDM. Make sure to tick this patch in Nemesis
							</description>
							<image path="images\blacklogo.png"/>
							<files>
								<folder source="01 DMAC" destination=""/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>					
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>
